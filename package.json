{
  "name": "pandoc-mirror",
  "version": "1.0.0",
  "description": "Pandoc editor using ProseMirror",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "start": "webpack-dev-server --mode development",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jjallaire/pandoc-mirror.git"
  },
  "keywords": [
    "pandoc",
    "editor"
  ],
  "author": "J.J. Allaire",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jjallaire/pandoc-mirror/issues"
  },
  "homepage": "https://github.com/jjallaire/pandoc-mirror#readme",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "prettier": "^1.18.2",
    "ts-loader": "^6.0.4",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.5.3",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  }
}
